<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dpayaronalti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/MakyajLogoimg"
                android:layout_width="@dimen/dpayaryuz"
                android:layout_height="@dimen/dpayaryuz"
                android:layout_marginStart="@dimen/dpayaronalti"
                android:layout_marginTop="@dimen/dpayaronalti"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtMakyajAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dpayaronalti"
                android:textColor="@color/pembe"
                android:textSize="@dimen/spayaryirmi"
                app:layout_constraintStart_toEndOf="@+id/MakyajLogoimg"
                app:layout_constraintTop_toTopOf="@+id/MakyajLogoimg"
                tools:text="Ruj (Lipstick)" />

            <TextView
                android:id="@+id/txtRenkSecenegi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dpayarotuzdort"
                android:layout_marginTop="12dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.163"
                app:layout_constraintStart_toEndOf="@+id/MakyajLogoimg"
                app:layout_constraintTop_toBottomOf="@+id/txtKullanimAlani2" />

            <TextView
                android:id="@+id/txtKullanimAlani2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dpayaronalti"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.243"
                app:layout_constraintStart_toEndOf="@+id/MakyajLogoimg"
                app:layout_constraintTop_toBottomOf="@+id/txtMakyajAdi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>